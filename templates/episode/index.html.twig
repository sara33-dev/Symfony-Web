{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1 class="text-center m-3">{{ 'page.title.episode.index'|trans }}</h1>
    <a class="btn btn-danger" href="{{ path('episode_new') }}">{{ 'add.episode'|trans}}</a>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'number'|trans }}</th>
                <th>{{ 'description'|trans }}</th>
                <th>{{ 'action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>Episode: {{ episode.number }}</td>
                <td>{{ episode.description }}</td>
                <td>
                    <a href="{{ path('episode_show', {'episodeSlug': episode.slug}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('episode_edit', {'episodeSlug': episode.slug}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'episode.no'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
