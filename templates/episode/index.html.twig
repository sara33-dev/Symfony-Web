{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Episode index</h1>
    <a class="btn btn-danger" href="{{ path('episode_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>Episode: {{ episode.number }}</td>
                <td>{{ episode.description }}</td>
                <td>
                    <a href="{{ path('episode_show', {'episodeSlug': episode.slug}) }}">show</a>
                    <a href="{{ path('episode_edit', {'episodeSlug': episode.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
