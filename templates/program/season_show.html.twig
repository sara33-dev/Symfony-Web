{% block body %}

    <h1>{{ program.title }} : {{ 'season'|trans}} {{ season.number }} </h1>
    <p>{{ 'published.in'|trans}} : {{ season.year }} </p>
    <p>{{ 'resume'|trans}} : {{ season.description }} </p>
    <h2>{{ 'episodes.all'|trans}} : </h2>
    <ul>
        {% for episode in episodes %}
            <li>{{ episode.slug }} : {{ episode.title }}</li>
            <li>{{ 'resume'|trans}}: {{ episode.description }}</li>
            <a href="{{ path('program_episode_show', {'programSlug':program.slug, 'seasonId':season.id, 'episodeSlug':episode.slug }) }}">{{ 'vew.more'|trans}}</a>
        {% endfor %}
    </ul>

{% endblock %}
