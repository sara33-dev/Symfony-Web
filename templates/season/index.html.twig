{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th> {{ 'number'|trans}}</th>
                <th> {{ 'year'|trans}}</th>
                <th> {{ 'descriptions'|trans}}</th>
                <th> {{ 'actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a href="{{ path('season_show', {'id': season.id}) }}"> {{ 'show'|trans}}</a>
                    <a href="{{ path('season_edit', {'id': season.id}) }}"> {{ 'edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"> {{ 'season.no'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_new') }}"> {{ 'add.new'|trans}}</a>
{% endblock %}
